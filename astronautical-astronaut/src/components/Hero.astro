---
import astroLogo from '../assets/astro.svg';
//import background from '../assets/background.svg';
---

<div id="container">
	<main>
		<section id="hero">
			<section id="inicio" class="relative overflow-hidden">
   <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
         <div class="space-y-8">
            <div class="space-y-4">
               <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-white leading-tight">
                  Reparación de
                  <span class="bg-gradient-to-r from-cyan-500 to-blue-600 bg-clip-text text-transparent">
                     <!-- -->Aires<!-- --> 
                  </span>
                  y
                  <span class="bg-gradient-to-r from-green-500 to-emerald-600 bg-clip-text text-transparent">
                     <!-- -->Refrigeradores
                  </span>
               </h1>
               <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">Servicio técnico especializado 24/7. Reparamos tu equipo de refrigeración con garantía y los mejores precios del mercado.</p>
            </div>
            <div class="flex flex-col sm:flex-row gap-4">
                <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg]:size-4 [&amp;_svg]:shrink-0 bg-background hover:text-accent-foreground h-11 rounded-md border-2 border-cyan-500 text-cyan-600 hover:bg-cyan-50 px-8 py-4 text-lg">Agendar Citas</button>
               <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg]:size-4 [&amp;_svg]:shrink-0 bg-primary hover:bg-primary/90 h-11 rounded-md bg-gradient-to-r from-cyan-500 to-blue-600 hover:from-cyan-600 hover:to-blue-700 text-white px-8 py-4 text-lg">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone mr-2 h-5 w-5">
                     <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                  </svg>
                  Llamar Ahora
               </button>
               <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&amp;_svg]:pointer-events-none [&amp;_svg]:size-4 [&amp;_svg]:shrink-0 bg-background hover:text-accent-foreground h-11 rounded-md border-2 border-cyan-500 text-cyan-600 hover:bg-cyan-50 px-8 py-4 text-lg">Ver Servicios</button>
            
            </div>
            <div class="flex items-center space-x-8 pt-4">
               <div class="flex items-center space-x-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big h-5 w-5 text-green-500">
                     <path d="M21.801 10A10 10 0 1 1 17 3.335"></path>
                     <path d="m9 11 3 3L22 4"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Servicio 24/7</span>
               </div>
               <div class="flex items-center space-x-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big h-5 w-5 text-green-500">
                     <path d="M21.801 10A10 10 0 1 1 17 3.335"></path>
                     <path d="m9 11 3 3L22 4"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Garantía Incluida</span>
               </div>
               <div class="flex items-center space-x-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big h-5 w-5 text-green-500">
                     <path d="M21.801 10A10 10 0 1 1 17 3.335"></path>
                     <path d="m9 11 3 3L22 4"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Precios Justos</span>
               </div>
            </div>
         </div>
         <div class="relative">
            <div class="relative z-10">
               <div class="bg-gradient-to-br from-cyan-400 to-blue-600 rounded-3xl p-8 shadow-2xl">
                  <div class="grid grid-cols-2 gap-6">
                     <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-snowflake h-12 w-12 text-white mx-auto mb-4">
                           <line x1="2" x2="22" y1="12" y2="12"></line>
                           <line x1="12" x2="12" y1="2" y2="22"></line>
                           <path d="m20 16-4-4 4-4"></path>
                           <path d="m4 8 4 4-4 4"></path>
                           <path d="m16 4-4 4-4-4"></path>
                           <path d="m8 20 4-4 4 4"></path>
                        </svg>
                        <h3 class="text-white font-semibold text-lg">Aires Acondicionados</h3>
                     </div>
                     <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-thermometer h-12 w-12 text-white mx-auto mb-4">
                           <path d="M14 4v10.54a4 4 0 1 1-4 0V4a2 2 0 0 1 4 0Z"></path>
                        </svg>
                        <h3 class="text-white font-semibold text-lg">Refrigeradores</h3>
                     </div>
                     <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-wrench h-12 w-12 text-white mx-auto mb-4">
                           <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
                        </svg>
                        <h3 class="text-white font-semibold text-lg">Mantenimiento</h3>
                     </div>
                     <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-6 text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shield h-12 w-12 text-white mx-auto mb-4">
                           <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path>
                        </svg>
                        <h3 class="text-white font-semibold text-lg">Garantía</h3>
                     </div>
                  </div>
               </div>
            </div>
            <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-green-400 to-emerald-500 rounded-full opacity-20 animate-pulse"></div>
            <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-gradient-to-br from-blue-400 to-cyan-500 rounded-full opacity-20 animate-pulse delay-1000"></div>
         </div>
      </div>
   </div>
</section>
		</section>
		<section id="links">
		</section>
	</main>
</div>

<style>
#container {
        font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
        height: 100%;
        background-color: #111827;
        color: rgb(209 213 219 / var(--tw-text-opacity, 1));
    }
	p, h1 {
		color: rgb(209 213 219 / var(--tw-text-opacity, 1));
	}
</style>